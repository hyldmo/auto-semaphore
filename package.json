    "@semantic-release/npm": "^12.0.2",
    "@types/node": "^24.0.12",
    "@vitest/coverage-v8": "^3.2.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.6",
